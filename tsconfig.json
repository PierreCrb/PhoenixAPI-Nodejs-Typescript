{
  "compilerOptions": {
    "composite": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "types": ["node"],
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "dist"]
}
